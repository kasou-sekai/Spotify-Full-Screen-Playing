{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["DOM", "ESNext"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": "."
    },
    "include": ["src/**/*", "shared/**/*"]
}
